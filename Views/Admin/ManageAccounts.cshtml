@model IEnumerable<oa.Areas.Identity.Data.AppUser>
@{
    ViewData["Title"] = "Manage User Accounts";
}

<h1 class="text-center  margin-top-120">ManageAccounts</h1>

<div class="manage-container-column">
    <div class="manage-container-row">
        <div class="manage-btn-cntr">
            <a class="btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/AdminRegister" role="button">Add New</a>
         </div>
    </div>
</div>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScreenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScreenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>

                    <a class="btn btn-outline-secondary" asp-action="EditAccountDetails" asp-route-id="@item.Id" role="button">Details</a>

          
            </td>
        </tr>
}
    </tbody>
</table>
