@model oa.Areas.Identity.Data.AppUser
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Edit Account Details";
}
<h1 class="text-center mb-5  margin-top-120">Edit Account Details</h1>
<div class="container-email-btn">
    <div class="row-email-btn">
        <a class="btn btn-outline-primary background-default-b email-btn-left" asp-controller="Admin" asp-action="ManageAccounts" data - bs - toggle="tooltip" data - bs - placement="bottom" data - bs - title="Goes back to list of user accounts">Back</a>
        <a class="btn btn-outline-danger email-btn-left" asp-action="Lock" asp-route-id="@Model.Id" role="button" data - bs - toggle="tooltip" data - bs - placement="bottom" data - bs - title="Locks the Current user and prevents access">Lock Account</a>
        <a class="btn btn-outline-success email-btn-left" asp-action="Unlock" asp-route-id="@Model.Id" role="button" data - bs - toggle="tooltip" data - bs - placement="bottom" data - bs - title="Unlocks the current users account">Unlock Account</a>
        <a class="btn btn-outline-secondary emial-btn-right" asp-action="Email" asp-route-id="@Model.Id" role="button" data - bs - toggle="tooltip" data - bs - placement="bottom" data - bs - title="Takes you to a page to send an email to an account">Send Email</a>
    </div>
</div>
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="UpdateAccountDetails">
            <hr />
           <div class="form-floating mb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <input asp-for="Id" class="form-control" autocomplete="Id" placeholder="Id" type="hidden" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ScreenName" class="form-control" autocomplete="user-name" placeholder="username" id="input_screen_name" readonly="true" />
                <label asp-for="ScreenName" class="control-label"></label>                
                <span asp-validation-for="ScreenName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" id="input_first_name"/>
                <label asp-for="FirstName" class="control-label"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" id="input_last_name" />
                <label asp-for="LastName" class="control-label"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Address" class="form-control" autocomplete="current address" aria-required="true" placeholder="Current Address" />
                <label asp-for="Address">Address</label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="City" class="form-control" autocomplete="city" aria-required="true" placeholder="City" />
                <label asp-for="City">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="State" class="form-control" autocomplete="state" aria-required="true" placeholder="State" />
                <label asp-for="State">State</label>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Zip" class="form-control" autocomplete="zip" aria-required="true" placeholder="Zip Code" />
                <label asp-for="Zip">Zip</label>
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control" id="Phone" placeholder="(000) 000-0000"/>
                <label asp-for="PhoneNumber" class="control-label"></label>                
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" />
                <label asp-for="Email" class="control-label"></label>               
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DateofBirth" class="form-control" autocomplete="date of birth" aria-required="true" placeholder="Date of Birth" type="date" />
                <label asp-for="DateofBirth">Date of Birth</label>
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-floating mb-3">
                <input asp-for="AcctSuspensionDate" class="form-control" type="date"/>
                <label asp-for="AcctSuspensionDate" class="control-label"></label>                
                <span asp-validation-for="AcctSuspensionDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="AcctReinstatementDate" class="form-control" type="date" />
                <label asp-for="AcctReinstatementDate" class="control-label"></label>                
                <span asp-validation-for="AcctReinstatementDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastPasswordChangedDate" class="form-control" type="date" />
                <label asp-for="LastPasswordChangedDate" class="control-label"></label>
                <span asp-validation-for="LastPasswordChangedDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PasswordResetDays" class="form-control" />
                <label asp-for="PasswordResetDays" class="control-label"></label>
                <span asp-validation-for="PasswordResetDays" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <select asp-for="UserRole" asp-items=@Model.RoleList class="form-drop-down form-select" aria-required="true">
                    <option default hidden disabled selected>Select Role</option>
                </select>
                <span asp-validation-for="UserRole" class="text-danger"></span>
            </div>
            <div class="form-drop-down mb-3" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="save and update user details">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
