@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "OnAccount Roles";
}

<h1 class="text-center mb-2">"On Account Roles"</h1>
<p>
    <a class="btn btn-primary" asp-action="CreateRole" role="button">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
           <th>@Html.DisplayNameFor(model => model.Id)</th>
           <th>@Html.DisplayNameFor(model => model.Name)</th>
        </tr>
    </thead>
    <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(modelItem => item.Id)</th>
                    <th>@Html.DisplayFor(modelItem => item.Name)</th>
                </tr>
            }
        </tbody>
</table>
