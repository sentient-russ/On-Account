@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
<div class="text-center margin-top-120">
    <img src="~/img/user_roles.jpg" style="max-height: 150px;" />
</div>
<h1 class="text-center mb-4">Manage Roles</h1>
<div class="search-row">
    <div class="search-colum-1">
        <a class="btn btn-primary" style="max-height:32px;" asp-action="CreateRole" role="button" data - bs - toggle="tooltip" data - bs - placement="bottom" data - bs - title="Redirects to add new role page">Add New</a>
    </div>
    <div class="search-colum-2">

    </div>
    <div class="search-colum-3">

    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @foreach (var item in Model)
        {
            <tr>
                <th>@Html.DisplayFor(modelItem => item.Id)</th>
                <th>@Html.DisplayFor(modelItem => item.Name)</th>
            </tr>
        }
    </tbody>
</table>


