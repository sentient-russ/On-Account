@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 class="text-center mb-5  margin-top-120">@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-4 mx-auto">
        <form method="post">
            <span class="mb-2">
                You may enter your email and answer the security question. Provided that your entries are confirmed, you will be sent an email with reset instructions.</span>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div><H5>&nbsp;Security question:</H5></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.SecurityQuestion" class="form-control" autocomplete="Date of birth" aria-required="true" placeholder="Year-Month-day" />
                <label asp-for="Input.SecurityQuestion" class="form-label"></label>
                <span asp-validation-for="Input.SecurityQuestion" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
